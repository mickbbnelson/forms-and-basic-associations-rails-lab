<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <br>
  <%= f.label :notes %>
  <%= f.text_area :notes, id: "song_notes_1", name: "song[content_for_notes][]" %>
  <%= f.label :notes %>
  <%= f.text_area :notes, id: "song_notes_2", name: "song[content_for_notes][]" %>
  <br />

  <%= f.submit %>
<% end %>


